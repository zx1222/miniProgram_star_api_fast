/* 搜索框 */

.weui-search-bar {
  padding: 40rpx 0;
  background: transparent;
  border: none;
}

.weui-search-bar__form {
  border: 4rpx solid #000;
}

/*  加载更多  start */

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  color: #fff;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

.loadmore-end {
  width: 100%;
  margin: 1.2em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

/*  加载更多  end */

/* swiper */

.swiper image {
  width: 100%;
}

.swiper {
  position: relative;
}

.swiper .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  /* transition: all 0.6s; */
}

.swiper .dots .dot.active {
  width: 16rpx;
  height: 16rpx;
  background: #fff;
  padding: 2px;
  background-clip: content-box;
  box-shadow: 0 0 0 0.5px #fff;
  /* box-shadow: 0 0 0 2px rgba(15,15,15,.6), 0 0 0 3px #ffffff; */
}

/* 底部导航 */

tabbar-bottom {
  position: fixed;
  bottom: 0;
