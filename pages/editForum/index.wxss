.container {
  width: 100%;
  height: 100%;
  padding: 40rpx 30rpx;
}
input{
  box-sizing: border-box;
   width: 100%;
   height: 60rpx;
  padding: 14rpx 20rpx;
  font-size: 28rpx;
  border-bottom: 1px dashed #979797;
  margin: 14rpx 0;
}
textarea {
  width: 100%;
  padding: 14rpx 20rpx;
  height: 200rpx;
  font-size: 28rpx;
    margin: 14rpx 0;
}

.pic-wrp {
  margin: 40rpx 0;
}

.pic-item {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  position: relative;
  background: #eeeeee;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  float: left;
}

.pic-item .icon-wrp {
  width: 46rpx;
  height: 46rpx;
  background: rgba(25, 25, 25, 0.5);
  border-radius:0 0 0 100%/100%;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  text-align: center;
  line-height: 40rpx;
}

.pic-item .icon {
  font-size: 28rpx;
  color:#ffffff;
}

.pic-item .pic {
  width: 200rpx;
  height: auto;
}

.add-pic {
  width: 200rpx;
  height: 200rpx;
  border: 1px dashed #979797;
  background: #fff;
}

.add-pic .icon {
  font-size: 40rpx;
  color: #979797;
}

.placeholder {
  color: #979797;
}

.btn-submit, .btn-cancel {
  margin: 40rpx 20rpx 0 20rpx;
  width: 160rpx;
  height: 50rpx;
  border-radius: 4rpx;
  line-height: 50rpx;
  background: #fff;
}
