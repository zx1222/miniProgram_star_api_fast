.swiper-indicator {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  position: fixed;
  top:60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-family: 'FZLTHJT';
  z-index: 2;
}

.swiper-indicator .indicator-item {
  flex: 1;
  color: #919191;
  text-align: center;
  font-size: 24rpx;
  font-weight: bold;
  letter-spacing: 1px;
  transition: 0.6s;
  -webkit-transition: 0.6s;
}

.swiper-item {
  width: 100%;
/* overflow-y: scroll; */
  /* overflow-y: scroll; */
}

.slider-line {
  position: absolute;
  bottom: 0;
  width: 33.3%;
  height: 6rpx;
  transition: transform 0.5s;
  -webkit-transition: transform 0.5s;
}

.slider-line .line-inner {
  width: 34%;
  background: #f66a94;
  height: 6rpx;
  margin-left: 33%;
}
