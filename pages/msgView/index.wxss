.container {
  width: 100%;
  height: 100%;
}
 .item {
  padding: 36rpx 0;
  border-bottom: 1px solid #c8c8c8;
}

  .hd {
  overflow: hidden;
  display: flex;
  align-items: center;
  width: 100%;
  padding: 14rpx 20rpx 0 20rpx;
}

 .hd .avatar {
  width: 62rpx;
  height: 62rpx;
  border-radius: 50%;
  overflow: hidden;
}

  .hd .name {
  font-size: 28rpx;
  padding-left: 30rpx;
  color: #cdcdcd;
}

 .hd .hd-r {
  padding-left: 26rpx;
  display: flex;
  flex-direction: column;
  /* margin-top: 20rpx; */
}

 .hd .name, .list-wrp-reply .hd .time {
  color: #959595;
}

.reply-content {
  color: #1e1e1e;
  padding: 20rpx 0rpx 0rpx 110rpx;
}

 .forum-content {
  background: #f5f5f5;
  padding: 20rpx 12rpx;
  border-top: 1px solid #cdcdcd;
  border-bottom: 1px solid #cdcdcd;
}

